  "authors": [
    "FireNH"
  ],
  "contact": {
    "homepage": "*",
    "sources": "https://github.com/firenh/Profundis"
  },

  "license": "LGPL-3.0",
  "icon": "assets/profundis/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "fireopal.profundis.Profundis"
    ]
  },
  "mixins": [
    "profundis.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.2",
    "java": ">=17"
  },
